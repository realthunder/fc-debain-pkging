#!/usr/bin/make -f

ifeq ($(findstring parallel=,$(DEB_BUILD_OPTIONS)),)
	export DEB_BUILD_OPTIONS+=parallel=$(shell getconf _NPROCESSORS_ONLN)
endif

%:
	dh $@ --buildsystem=cmake --parallel --with python2

DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
UBUNTU_CODENAME  := $(shell lsb_release -sc)
UBUNTU_RELEASE  := $(shell lsb_release -sr)

extra_flags += \
-DFREECAD_BUILD_DEBIAN=ON \
-DBUILD_FEM_NETGEN=ON \
-DCMAKE_CXX_FLAGS="-Wall -DHAVE_SWIG=1 -fpermissive $(shell dpkg-buildflags --get CXXFLAGS) $(shell dpkg-buildflags --get CPPFLAGS)" \
-DCMAKE_C_FLAGS="-Wall -fpermissive $(shell dpkg-buildflags --get CFLAGS) $(shell dpkg-buildflags --get CPPFLAGS)" \
-DCMAKE_SHARED_LINKER_FLAGS="$(shell dpkg-buildflags --get LDFLAGS)" \
-DLIB_SUFFIX="" \
-DOCC_INCLUDE_DIR="/usr/include/oce" \
-DCMAKE_INSTALL_PREFIX="/usr/lib/freecad-legacy" \
-DCMAKE_INSTALL_DATADIR="/usr/share/freecad-legacy" \
-DCMAKE_INSTALL_DOCDIR="/usr/share/doc/freecad-legacy-doc" \

override_dh_auto_configure:
	dh_auto_configure -- $(extra_flags)
	cp -f src/Build/Version.h obj-$(DEB_BUILD_GNU_TYPE)/src/Build/Version.h

override_dh_compress:
	dh_compress -X.qch -X.qhc

override_dh_installchangelogs:
	dh_installchangelogs ChangeLog.txt
	
override_dh_installmime:
	dh_installmime
	dh_install debian/mime/freecad-legacy-thumbnailer usr/bin
	dh_install debian/mime/freecad-legacy.thumbnailer usr/share/thumbnailers
	dh_install debian/mime/freecad-legacy.schemas etc/gconf/schemas

override_dh_icons:
	install -m 644 debian/freecad-legacy/usr/share/freecad-legacy/freecad-legacy-icon-16.png debian/freecad-legacy/usr/share/icons/hicolor/16x16/apps/freecad-legacy.png
	install -m 644 debian/freecad-legacy/usr/share/freecad-legacy/freecad-legacy-icon-32.png debian/freecad-legacy/usr/share/icons/hicolor/32x32/apps/freecad-legacy.png
	install -m 644 debian/freecad-legacy/usr/share/freecad-legacy/freecad-legacy-icon-32.png debian/freecad-legacy/usr/share/icons/hicolor/48x48/apps/freecad-legacy.png
	install -m 644 debian/freecad-legacy/usr/share/freecad-legacy/freecad-legacy-icon-64.png debian/freecad-legacy/usr/share/icons/hicolor/64x64/apps/freecad-legacy.png
	install -m 644 debian/freecad-legacy/usr/share/freecad-legacy/freecad-legacy.svg debian/freecad-legacy/usr/share/icons/hicolor/scalable/apps/freecad-legacy.svg
	install -m 644 debian/freecad-legacy/usr/share/freecad-legacy/freecad-legacy-doc.png debian/freecad-legacy/usr/share/icons/hicolor/64x64/mimetypes/application-x-extension-fcstd.png

